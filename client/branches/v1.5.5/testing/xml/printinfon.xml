<f:function
	xmlns:f="http://www.filmsfolded.com/xsl/ui"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">

	<f:param name="focus" />
	<f:derived name="relationContent" from="focus">
		<f:get what="relation" />
		<f:get what="content" />
	</f:derived>
	
	<xsl:template>
		<html:div>
			<xsl:for-each select="$relationContent/node()">
				<xsl:choose>
					<xsl:when test="self::role">
						<html:span style="color:purple">
							<f:thunk name="printrole">
								<f:with-param name="infon" value-id="{$focus/@id}" />
								<f:with-param name="role"><f:string value="{@role}" /></f:with-param>
							</f:thunk>
						</html:span>
					</xsl:when>
					<xsl:otherwise>
						<xsl:value-of select="." />
					</xsl:otherwise>
				</xsl:choose>
			</xsl:for-each>
		</html:div>
	</xsl:template>
	
	<f:function name="printrole">
		<f:param name="infon" />
		<f:param name="role" />
		<f:derived name="arg" from="infon">
			<f:get what="arcs" />
			<f:getkey key="role" />
		</f:derived>
		
		<xsl:template>
			<html:span>
				<xsl:if test="$arg">
					<f:thunk url="printcontent.xml">
						<f:with-param name="focus" value-id="{$arg/@id}" />
					</f:thunk>
				</xsl:if>
			</html:span>
		</xsl:template>
	</f:function>
</f:function>