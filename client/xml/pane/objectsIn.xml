<f:template name="testTemplate"
	xmlns:f="http://www.worldmerge.com/2008/xsl"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">
	
	<f:param name="focus" type="Object" />
	<f:param name="showBadge" type="a -> b -> c -> d -> e -> f -> Unit JS" />
	<f:param name="newPane" type="a -> Unit JS" />
	<f:param name="pane" type="UI.pane.pane" />
	
	<f:derive name="addingObject" d="UI.pane.pane:addingObject pane" />
	<f:derive name="propertiesState" d="UI.pane.pane:addingObjectPropertiesState pane" />
	
	<f:derive name="set" d="getObjectsIn focus" />
	
	
	
	<html:div>
		<f:pattern>
			<f:match test="$addingObject">
				<f:each select="$propertiesState">
					<html:span>
						Set New Object Properties:
					</html:span>
					<f:thunk url="properties.xml">
						<f:with-param name="focus" select="$addingObject" />
						<f:with-param name="propertiesState" select="$propertiesState" />
					</f:thunk>
			
					<html:button>
						Confirm
						<f:on event="click" with-action="$doneAddObject" />
					</html:button>
					<html:hr />
				</f:each>
			</f:match>
			<f:otherwise>
				<html:button>
					Add Object
					<f:on event="click" with-action="$addObject" />
				</html:button>
			</f:otherwise>
		</f:pattern>
	</html:div>

	<f:each select="$set" key="object">
		<html:div class="entry"><html:div class="entry-row">
			<html:div class="entry-cell">
				<f:thunk url="../view2/viewPlus.xml">
					<f:with-param name="focus" select="$object" />
					<f:with-param name="extra" select="$extra" />
				</f:thunk>
			</html:div>
			<html:div class="entry-button">
				<f:thunk with-template="$removeButton">
					<f:with-param name="object" select="$object" />
				</f:thunk>
			</html:div>
		</html:div></html:div>
	</f:each>
	
	<f:template name="extra">
		<f:param name="focus" type="Object" />
		<f:on event="click" with-action="$showBadge">
			<f:with-param name="focus" select="$focus" />
			<f:with-param-browser name="elemX" prop="elemX" />
			<f:with-param-browser name="elemY" prop="elemY" />
			<f:with-param-browser name="elemWidth" prop="elemWidth" />
			<f:with-param-browser name="elemHeight" prop="elemHeight" />
			<f:with-param name="openObject" select="$newPane" />
		</f:on>
	</f:template>
	
	
	

	<f:action name="addObject">
		<f:create type="Object" name="newObj" />
		<f:intact object="$pane" action="add" property="addingObject" key="$newObj" />
	</f:action>

	<f:include url="/xml/util/actions.xml" />
	
	<f:action name="doneAddObject">
		<f:each select="$addingObject">
			<f:perform with-action="$putObjectInSituation">
				<f:with-param name="situation" select="$focus" />
				<f:with-param name="object" select="$addingObject" />
			</f:perform>
			<f:intact object="$pane" action="remove" property="addingObject" key="$addingObject" />
		</f:each>
	</f:action>
	
	
	<f:template name="removeButton">
		<f:param name="object" type="Object" />
		<f:derive name="inOntObj" d="getObjectInSit object focus" />
		<html:button>
			Remove
			<f:on event="click" with-action="$removeObject" />
		</html:button>

		<f:action name="removeObject">
			<!-- TODO shouldn't need a key -->
			<f:each select="$inOntObj">
				<f:intact object="$inOntObj" action="remove" property="truth" key="null" />
			</f:each>
		</f:action>
	</f:template>
	
	
	
	

	

	

	
</f:template>