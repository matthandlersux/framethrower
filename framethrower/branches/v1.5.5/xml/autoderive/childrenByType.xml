<f:derived
	xmlns:f="http://www.filmsfolded.com/xsl/ui"
	name="childrenByType" from="focus">
	
	<f:get what="childObjects" />
	<groupby ascontext="focus" type="kernel.ob">
		<f:get what="involves" />
		<f:filter>
			<f:get what="relation" />
			<f:equals>
				<f:start predef="ofType" />
			</f:equals>
		</f:filter>
		<f:filter>
			<f:get what="arcs" />
			<f:getkey key="'instance'" />
			<f:equals>
				<f:start from="focus" />
			</f:equals>
		</f:filter>
		<f:takeone />
		<f:get what="arcs" />
		<f:getkey key="'type'" />
	</groupby>
</f:derived>