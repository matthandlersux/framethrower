<f:binding
	xmlns:f="http://www.filmsfolded.com/xsl/ui"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	
	<f:transaction name="Minimize" event="click" button="minimize">
		<f:param name="zui" />
		
		<f:derived name="minimized" from="zui">
			<get what="minimized" />
		</f:derived>

		<xsl:template>
			<transaction>
				<intact with-id="{$zui/@id}" prop="minimized" action="set">
					<with-param>
						<xsl:choose>
							<xsl:when test="$minimized/@value = 'false'">
								<f:bool value="true" />
							</xsl:when>
							<xsl:otherwise>
								<f:bool value="false" />
							</xsl:otherwise>
						</xsl:choose>
					</with-param>
				</intact>
			</transaction>
		</xsl:template>		
	</f:transaction>
	
	<f:transaction name="Center" event="click" button="center">
		<f:param name="zui" />
		<f:param name="childWindow" />
		
		<f:derived name="parentZui" from="zui">
			<get what="parentZui" />
		</f:derived>
		
		<f:derived name="leftChildInView" from="parentZui">
			<get what="leftChildInView" />
		</f:derived>
		
		<f:derived name="childZuisMinimized" from="parentZui">
			<get what="childZuis" />
			<buildassoc what="minimized" />	
		</f:derived>


		<xsl:template>
			<xsl:variable name="index" select="count($childZuisMinimized/*[f:key/*/@id = $zui/@id]/preceding-sibling::*[f:value/*/@value = 'false'])" />
			<transaction>
				<intact with-id="{$parentZui/@id}" prop="leftChildInView" action="set">
					<with-param>
						<xsl:choose>
							<xsl:when test="$leftChildInView/@value &gt; $index">
								<f:number value="{$index}" />
							</xsl:when>
							<xsl:otherwise>
								<f:number value="{$index - $childWindow/@value + 1}" />
							</xsl:otherwise>
						</xsl:choose>
					</with-param>
				</intact>
			</transaction>
		</xsl:template>		
	</f:transaction>
	
	
	
</f:binding>
