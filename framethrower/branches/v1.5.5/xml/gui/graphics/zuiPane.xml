<f:function
	xmlns:f="http://www.filmsfolded.com/xsl/ui"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">

	<f:param name="width" />
	<f:param name="height" />
	<f:param name="border" />
	<f:param name="titleBarHeight" />
	<f:param name="color" />
	
	<xsl:template>
		<xsl:variable name="w" select="$width/@value" />
		<xsl:variable name="h" select="$height/@value" />
		<xsl:variable name="b" select="$border/@value" />
		<xsl:variable name="tbh" select="$titleBarHeight/@value" />
		
		<svg:svg width="{$w}" height="{$h}">
			<svg:rect x="0" y="0" width="{$w}" height="{$h}" fill="{$color/@value}" stroke="#333" stroke-width="1" />
			<svg:rect x="{$b}" y="{$tbh}" width="{$w - $b * 2}" height="{$h - $tbh - $b}" fill="#fff" stroke="#333" stroke-width="1" />
		</svg:svg>
	</xsl:template>
</f:function>