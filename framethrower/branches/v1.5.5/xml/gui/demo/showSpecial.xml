<f:function
	xmlns:f="http://www.filmsfolded.com/xsl/ui"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">

	<f:param name="special" />
	<f:param name="width" />
	<f:param name="height" />
	<f:param name="panelLayer" />
	
	<xsl:template>
		<xsl:variable name="w" select="$width/@value" />
		<xsl:variable name="h" select="$height/@value" />
		
		<xsl:variable name="titleBarHeight" select="30" />
		<xsl:variable name="padding" select="15" />	
		
		
		
		<xsl:variable name="winw">
			<xsl:choose>
				<xsl:when test="$special/@value = 1">548</xsl:when>
				<xsl:when test="$special/@value = 2">508</xsl:when>
			</xsl:choose>
		</xsl:variable>
		
		<xsl:variable name="winh">
			<xsl:choose>
				<xsl:when test="$special/@value = 1">264</xsl:when>
				<xsl:when test="$special/@value = 2">438</xsl:when>
			</xsl:choose>
		</xsl:variable>
		
		
		
		
		
		<html:div>
			<html:div style="z-index:4; position:absolute; left:0; top:0; width:100%; height:100%;">
				<svg:svg width="100%" height="100%">
					<svg:rect x="0" y="0" width="100%" height="100%" opacity=".7" fill="black" stroke="#333" stroke-width="0" />
				</svg:svg>
			</html:div>
			<html:div style="z-index:5; position:absolute;" left="{($w -$winw) * .5}" top="{($h - $winh) * .5}" width="{$winw}" height="{$winh}">
				<f:binding url="binding.xml">
					<f:with-param name="panelLayer"><xsl:copy-of select="$panelLayer" /></f:with-param>
				</f:binding>
				
				<html:div style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%;">
					<html:div class="shadowBR"/>
					<html:div class="shadowBL"/>
					<html:div class="shadowTR"/>
					<html:div class="shadowTL"/>
					<html:div class="paneBackgroundBR"/>
					<html:div class="paneBackgroundBL"/>
					<html:div class="paneBackgroundTitle" style="background-color: #bbb;"/>
					<html:div class="paneBackgroundTR"/>
					<html:div class="paneBackgroundTL"/>
				</html:div>
				
				
				<html:div class="zuiTitle" left="0" top="0" width="{$winw}" height="{$titleBarHeight}">

					
					<html:span style="margin-left:15px;">
						<f:button name="close" />
						<html:div class="close" />
					</html:span>
				</html:div>
				
				<html:div left="0" top="{$titleBarHeight}" width="{$winw}" height="{$winh - $titleBarHeight}">
					<xsl:choose>
						<xsl:when test="$special/@value = 1">
							
							<html:div style="margin-left:4px; border:1px solid #000;">
								
								<html:embed src="../images/videos/t2-clip.mp4" width="540" height="227" autoplay="true" controller="false" scale="aspect"
									type="video/quicktime" pluginspage="http://www.apple.com/quicktime/download/" />
							</html:div>
							
						</xsl:when>
						<xsl:when test="$special/@value = 2">
							<html:iframe src="http://www.map-generator.net/extmap.php?name=L.A.&amp;address=los%20angeles%2C%20california&amp;width=500&amp;height=400&amp;maptype=hybrid&amp;zoom=14&amp;hl=en&amp;t=1228717134" width="500" height="400" marginwidth="0" marginheight="0" frameborder="0" scrolling="no"></html:iframe>
						</xsl:when>
						<xsl:otherwise>
							
						</xsl:otherwise>
					</xsl:choose>
				</html:div>
				
			</html:div>
		</html:div>
	</xsl:template>
	
	
</f:function>