<f:template name="testTemplate"
	xmlns:f="http://www.worldmerge.com/2008/xsl"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">
	
	<f:param name="focus" type="Object" />
	<f:derive name="name" d="getName focus" />
	<f:derive name="types" d="getTypes focus" />
	<f:derive name="isRelation" d="filterRelations (returnSet focus)" />
	
	<f:derive name="typeDisplay" d="UI.prefs:typeDisplay ui.prefs" />
	
	<html:div class="object">
		<xsl:variable name="color">
			<xsl:choose>
				<xsl:when test="$isRelation/*">#e29</xsl:when>
				<xsl:otherwise>
					<xsl:value-of select="$typeDisplay/f:entry[f:key/f:o/@name = $types/f:o/@name][1]/f:value/f:literal/@value" />
				</xsl:otherwise>
			</xsl:choose> 
		</xsl:variable>
		
		<xsl:attribute name="style">background-color: <xsl:value-of select="$color" /></xsl:attribute>
		
		<xsl:choose>
			<xsl:when test="$name/*">
				<xsl:value-of select="$name/*/@value" />				
			</xsl:when>
			<xsl:otherwise>
				<html:i>Untitled</html:i>
			</xsl:otherwise>
		</xsl:choose>
		<f:on event="click" with-action="$openPane" />
	</html:div>
	
	<f:action name="openPane">
		<f:derive name="mainPaneSet" d="getMainPaneSet ui.main" />
		<f:derive name="mainPanes" d="getMainPanes mainPaneSet" />
		<f:derive name="lastPaneKey" d="takeLastKey mainPanes" />
		<xsl:variable name="newKey">
			<xsl:call-template name="ord-bigger">
				<xsl:with-param name="s" select="$lastPaneKey/@value" />
			</xsl:call-template>
		</xsl:variable>

		<f:create type="UI.pane.pane" name="newPane" />
		<f:intact object="$newPane" action="add" property="focus" key="$focus" />
		
		<f:intact object="$mainPaneSet" action="add" property="panes" value="$newPane">
			<f:with-param name="key" select="$newKey" as="String" />
		</f:intact>
	</f:action>

