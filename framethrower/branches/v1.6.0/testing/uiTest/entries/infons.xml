<f:template name="testTemplate"
	xmlns:f="http://www.worldmerge.com/2008/xsl"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">
	
	<f:param name="infons" type="Set Object" />
	<f:param name="newPane" type="a -> Unit JS" />

	<xsl:for-each select="$infons/*">
		<html:div class="entry">
			<html:div class="entry-cell">
				<f:thunk url="../view2/viewPlus.xml">
					<f:with-param name="focus" select="." />
					<f:with-param name="extra" select="$extra" />
				</f:thunk>
				<!-- <f:thunk with-template="$t">
					<f:with-param name="infon" select="." />
				</f:thunk> -->
			</html:div>
			<html:div class="entry-cell">
				<html:div>
					<f:on event="click" with-action="$removeInfon">
						<f:with-param name="infon" select="." />
					</f:on>
					<html:button>Remove</html:button>
				</html:div>
			</html:div>
		</html:div>
	</xsl:for-each>
	
	<!-- <f:template name="t">
		<f:param name="infon" type="Cons" />
		<f:derive name="infonCon" d="Cons~Object infon" />
		
		<f:thunk url="../view2/viewPlus.xml">
			<f:with-param name="focus" select="$infonCon" />
			<f:with-param name="extra" select="$extra" />
		</f:thunk>
	</f:template> -->
	
	<f:template name="extra">
		<f:param name="focus" type="Object" />
		<f:on event="click" with-action="$newPane">
			<f:with-param name="focus" select="$focus" />
		</f:on>
		<f:on event="dragStart" with-action="$drag" />
		<f:action name="drag">
			<f:derive name="main" d="ui.main" />
			<f:create name="dragging" type="UI.dragging">
				<f:with-param name="object" select="$focus" />
			</f:create>
			<f:intact object="$main" action="add" property="dragging" key="$dragging" />
		</f:action>
	</f:template>
	
	<f:action name="removeInfon">
		<f:param name="infon" type="Cons" />
		<f:intact object="$infon" action="remove" property="truth" key="null" />
	</f:action>

</f:template>