<f:template name="testTemplate"
	xmlns:f="http://www.worldmerge.com/2008/xsl"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:svg="http://www.w3.org/2000/svg">
	
	<f:param name="focus" type="Object" />
	<f:param name="clickAction" type="a -> Unit JS" />
	<f:param name="pane" type="UI.pane.pane" />
	
	<f:derive name="set" d="getInfonsIn focus" />
	
	<f:derive name="newInfons" d="UI.pane.pane:infonsInNewInfons pane" />
	<f:derive name="infonType" d="shared.type.infon" />

	<f:include url="/xml/util/consIP.xml" />

	<xsl:for-each select="$set/*">
		<html:div class="entry">
			<html:div class="entry-cell">
				<f:thunk url="../view/infon.xml">
					<f:with-param name="focus" select="." />
					<f:with-param name="clickAction" select="$clickAction" />
				</f:thunk>
			</html:div>
		</html:div>
	</xsl:for-each>
	<xsl:for-each select="$newInfons/*">
		<html:div class="entry">
			<html:div class="entry-cell">
				<f:thunk url="../view/infonIP.xml">
					<f:with-param name="focus" select="." />
					<f:with-param name="expectedType" select="$infonType" />
				</f:thunk>
			</html:div>
			<html:div class="entry-cell">
				<html:div>
					<f:on event="click" with-action="$addConsIP">
						<f:with-param name="consIP" select="." />
					</f:on>
					<html:button>Confirm</html:button>
				</html:div>
				<html:div>
					<f:on event="click" with-action="$cancelConsIP">
						<f:with-param name="consIP" select="." />
					</f:on>
					<html:button>Cancel</html:button>
				</html:div>
			</html:div>
		</html:div>
	</xsl:for-each>
	
	<html:div>
		<f:on event="click" with-action="$newInfon" />
		<html:button>Add New Infon</html:button>
	</html:div>
	
	
	<f:action name="addConsIP">
		<f:param name="consIP" type="UI.consIP" />
		<f:perform with-action="$consIPToCons" name="cons">
			<f:with-param name="consIP" select="$consIP" />
		</f:perform>
		<f:intact object="$cons" action="add" property="truth" key="null" />
		<f:intact object="$pane" action="remove" property="infonsInNewInfons" key="$consIP" />
	</f:action>
	<f:action name="cancelConsIP">
		<f:param name="consIP" type="UI.consIP" />
		<f:intact object="$pane" action="remove" property="infonsInNewInfons" key="$consIP" />
	</f:action>
	
	<f:action name="newInfon">
		<f:derive name="sharedIn" d="shared.in" />
		
		<f:create type="UI.consIP" name="in" />
		<f:intact object="$in" action="add" property="object" key="$sharedIn" />
		
		<f:create type="UI.consIP" name="sit" />
		<f:intact object="$sit" action="add" property="object" key="$focus" />
		
		<f:create type="UI.consIP" name="situatedInfon" />
		
		<f:create type="UI.consIP" name="new" />
				
		
		<f:create type="UI.consIP" name="cons" />
		<f:intact object="$cons" action="add" property="left" key="$in" />
		<f:intact object="$cons" action="add" property="right" key="$sit" />

		<f:intact object="$new" action="add" property="left" key="$cons" />
		<f:intact object="$new" action="add" property="right" key="$situatedInfon" />
		
		<f:intact object="$pane" action="add" property="infonsInNewInfons" key="$new" />
	</f:action>

</f:template>